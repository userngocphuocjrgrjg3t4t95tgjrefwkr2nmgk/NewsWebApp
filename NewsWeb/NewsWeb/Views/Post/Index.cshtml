@model List<Post>

<div>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Post List</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-controller="Post" asp-action="Create" class="btn btn-primary">
                Create New Post
            </a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Content
                    </th>
                    <th>
                        Category Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                    <tr>
                        <td width="30%">
                            @post.Title
                        </td>
                        <td width="40%">
                            @post.Content
                        </td>
                        <td width="10%">
                            @post.Category.Title
                        </td>
                    </tr>
                }
            </tbody>
        </table> }
    else
    {
        <p>Không tồn tại thể loại trong database</p>}
</div>